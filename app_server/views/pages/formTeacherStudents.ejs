<div id="numberOfStudents" data-formTeacherStudents="<%= JSON.stringify(formTeacherStudents)  %>" class="w3-panel w3-center">Student in Class: <%= formTeacherStudents.length %></div>
<% 
formTeacherStudents.forEach((student, index)=>{
%>
<hr>
<div>
    <div id="studentDataDiv" data-student="<%= JSON.stringify(student) %>"></div>
    <input id="studentProfilePictureInput_<%= student.student_id %>" type="file" onchange="studentProfilePictureInputChanged(event.target, '<%= JSON.stringify(student) %>')" style="display: none;">
    <img id="studentProfilePicture_<%= student.student_id %>" onclick="studentProfilePictureClicked(event, '<%= JSON.stringify(student.student_id) %>')" src="<%= student.image_url %>" alt="Avatar" class="w3-left w3-circle w3-margin-right" style="width:60px">
    <span class="w3-right w3-opacity"><%= student.student_id %></span>
    <h4><%= student.full_name %></h4><br>
    <hr class="w3-clear">
    <button onclick="showHideTeacherProfile(event, 'studentProfileDiv_<%= JSON.stringify(student.student_id) %>')" class="w3-panel w3-center w3-xlarge">Student Profile</button>
    <div id="studentProfileDiv_<%= student.student_id %>" class="w3-row-padding w3-hide" style="margin:0 -16px">
        <form id="formTeacherStudentsForm_<%= student.student_id %>" class="w3-containar">
            
            <label class="w3-text-brown"><b>First Name</b></label>
            <input value="<%=student.first_name %>" class="w3-input w3-border" type="text" name="first_name"><br><br>
            
            <label class="w3-text-brown"><b>Last Name</b></label>
            <input value="<%=student.last_name %>" class="w3-input w3-border" type="text" name="last_name"><br><br>
            
            <label class="w3-text-brown"><b>Other Name</b></label>
            <input value="<%=student.other_name %>" class="w3-input w3-border" type="text" name="other_name"><br><br>

            <label class="w3-text-brown"><b>Student Class</b></label>
            <input value="<%=student.student_class %>" class="w3-input w3-border" type="text" name="student_class"><br><br>

            <div id="formTeacherStudentsClassesDiv_<%= student.student_id %>" class="w3-container formTeacherStudentsClassesDiv"></div><br><br>

            <label class="w3-text-brown"><b>Student Subjects  <i w3-pale-yellow><%= student.subjects.length %></i></b></label>
            <select class="w3-select" name="subjects">
                
                <% student.subjects.forEach((sub) => { %>
                    <option value="<%= sub %>"><%= sub %></option>
                <% }) %>
                
            </select><br><br>

            <div id="formTeacherStudentsSubjectsDiv_<%= student.student_id %>" data-subjects="<%= JSON.stringify(student.subjects) %>" class="w3-container formTeacherStudentsSubjectsDiv"></div><br><br>
              
            <button onclick="updateFormTeacherStudentProfile(event, '<%= JSON.stringify(student.student_id) %>')" type="button" class="w3-btn w3-theme-d1 w3-margin-bottom"><i class="fa fa-thumbs-up"></i> Â Update Profile</button>

        </form>
    </div>
</div>
<% }) %> 